<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memeswow">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2.CameraDevice"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Login" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Edit Profile"
            android:theme="@style/AppTheme.EditProfile" />
        <activity
            android:name=".LiveFeedActivity"
            android:label="Live feed" />
        <activity android:name=".NewMemeActivity" />
        <activity android:name=".PostDetailsActivity"
            android:theme="@style/AppTheme.EditProfile"
            android:label="Post"></activity>
    </application>

</manifest>